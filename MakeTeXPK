#!/bin/sh
name=$1
dpi=$(echo $2*$3/1000+0.5 | bc -l | cut -d. -f1)
mag=$(echo $3/1000 | bc -l | cut -d. -f1)
mag=$mag+$(echo $3-$mag*1000 | bc -l)/1000
if [ $name = ${name#*/} ]; then
  [ -e ~/tex/TeXfonts/$mode/$name.${dpi}pk ] && exit 0
else
  mv $name.tfm $name.tfm.$$
  if ! mf "\mode=$mode; mag=$mag; batchmode; input $name" </dev/null >/dev/null; then
    echo ERROR: mf failed for $name `[ $3 = 1000 ] || echo scaled $3`
    mv $name.tfm.$$ $name.tfm
    exit 1
  fi
  hash=`md5sum $name.tfm | head -c32`
  mv $name.tfm.$$ $name.tfm
  if [ $hash != `md5sum $name.tfm | head -c32` ]; then
    echo ERROR: $name.tfm does not match $name.mf
    exit 1
  fi
  if ! ~/mytex/gftopk $name.${dpi}gf; then
    echo ERROR: gftopk failed for $name `[ $3 = 1000 ] || echo scaled $3`
    exit 1
  fi
  exit 0
fi
if [ -L ~/tex/TeXfonts/$name.tfm ]; then
  fullname=~/mf/$name
else
  fullname=$name
fi
mkdir /tmp/mf.$$
cd /tmp/mf.$$
if ! mf "\mode=$mode; mag=$mag; batchmode; input $fullname" </dev/null >/dev/null; then
  cd $OLDPWD
  rm -r /tmp/mf.$$
  echo ERROR: mf failed for $fullname `[ $3 = 1000 ] || echo scaled $3`
  exit 1
fi
if ! ~/mytex/gftopk $name.${dpi}gf; then
  cd $OLDPWD
  rm -r /tmp/mf.$$
  echo ERROR: gftopk failed for $fullname `[ $3 = 1000 ] || echo scaled $3`
  exit 1
fi
mkdir -p ~/tex/TeXfonts/$mode
mv $name.${dpi}pk ~/tex/TeXfonts/$mode
cd $OLDPWD
rm -r /tmp/mf.$$
