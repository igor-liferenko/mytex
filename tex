#!/bin/sh
export format=plain
export edit=/tmp/edit.$$
if [ $# = 1 ] && [ -e "$1" ]; then
  head -n1 "$1" | grep -q '^%&' && format=`sed -n 1s/^%&//p "$1"`
fi
~/tex/virtex "$@"
if [ -t 0 ] && [ -t 1 ]; then
  stty -icanon -echo
  tput u7
  gawk -v RS=R '{print;exit}' | sed -n '/.*;1$/!e echo'
  stty icanon echo
fi
[ -e $edit ] && em `cat $edit`
rm -f $edit
