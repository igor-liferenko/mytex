#!/bin/sh
pid="$(pgrep -f ~/tex/plain; pgrep -f ~/tex/тех; pgrep -f ~/mf/plain)"
if [ "$pid" ]; then
  if echo $pid | grep ' ' >/dev/null; then
    notify-send -u critical 'Close other instances of TeX and METAFONT and try again'
  else
    kill -USR1 $pid
    notify-send 'Interrupt sent'
  fi
else
  notify-send -u critical 'No TeX or METAFONT found'
fi
