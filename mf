#!/bin/sh
export edit=/tmp/edit.$$
export tfm=/tmp/tfm.$$
export gf=/tmp/gf.$$
export screen_size=$(~/mytex/screen-size)
~/mf/plain "$@"
ret=$?
~/tex/newline
[ -e $edit ] && em `cat $edit`
if [ $ret = 0 ]; then
  [ -e $tfm ] && gf_file=`cat $gf 2>/dev/null`
  if [ "$gf_file" ]; then
    ~/mytex/gftopk $gf_file
    ret=$?
  fi
fi
rm -f $edit $tfm $gf

