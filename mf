#!/bin/sh
export edit=/tmp/edit.$$
export gf=/tmp/gf.$$
export tfm=/tmp/tfm.$$
export screen_size=$(cat ~/.screen-size)
~/mf/plain "$@"
ret=$?
stty -icanon -echo
tput u7
awk -v RS=R '{ print $1; exit }' | sed -n '/.*;1$/!e echo'
stty icanon echo
[ -e $edit ] && env `sed 's/.* /file=&line=/' $edit` ~/em/em
if [ $ret = 0 ]; then
  if [ -e $gf ] && [ -e $tfm ]; then
    ~/mytex/gftopk `cat $gf`
  fi
fi
rm -f $edit $gf $tfm
