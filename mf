#!/bin/sh
export edit=/tmp/edit.$$
export gf=/tmp/gf.$$
export screen_size=$(~/mytex/screen-size)
~/mf/plain "$@"
ret=$?
~/tex/newline
[ -e $edit ] && em `cat $edit`
if [ $ret = 0 ]; then
  gf_file=`cat $gf 2>/dev/null`
  if [ "$gf_file" ]; then
    [ -e ${gf_file%.*}.tfm ] && ~/mytex/gftopk $gf_file
  fi
fi
rm -f $edit $gf

