#!/bin/sh
export base=plain
export edit=/tmp/edit.$$
export gf=/tmp/gf.$$
~/mf/virmf "$@"
ret=$?
if [ -t 0 ] && [ -t 1 ]; then
  stty -icanon -echo
  tput u7
  gawk -v RS=R '{print;exit}' | sed -n '/.*;1$/!e echo'
  stty icanon echo
fi
[ -e $edit ] && em `cat $edit`
if [ $ret = 0 ] && [ -e $gf ]; then
  gf_file=`cat $gf`
  if ~/mytex/gftodvi $gf_file; then
    dvi_file=${gf_file%.*}.dvi
    mode=localfont ~/mytex/dvips $dvi_file && ~/mytex/open ${dvi_file%dvi}ps # 'mode' must be the same as in Makefile
  fi
fi
rm -f $edit $gf
